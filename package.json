{
  "author": "Christopher Wallis <christopher.j.wallis@gmail.com> (http://notoriousb1t.com)",
  "bugs": {
    "url": "https://github.com/notoriousb1t/shapely/issues"
  },
  "description": "Morph SVG shapes",
  "devDependencies": {
    "@types/mocha": "^2.2.43",
    "@types/node": "^8.0.45",
    "del-cli": "^1.1.0",
    "mocha": "^3.5.3",
    "rollup": "^0.50.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-typescript": "^0.8.1",
    "ts-node": "^3.3.0",
    "tslint": "^5.7.0",
    "typescript": "^2.5.2",
    "uglify-js": "^3.1.1"
  },
  "jsnext:main": "./lib.es2015/main.js",
  "homepage": "https://github.com/shapely/shapely#readme",
  "license": "MIT",
  "main": "./lib/main.js",
  "module": "./lib.es2015/main.js",
  "name": "shapely",
  "repository": {
    "type": "git",
    "url": "https://github.com/shapely/shapely"
  },
  "types": "./types/main",
  "typings": "./types/main",
  "typeRoots": [
    "node_modules/@types"
  ],
  "scripts": {
    "build": "npm run build:cdn",
    "build:cdn": "rollup -c ./config/rollup.cdn.js",
    "compress": "npm run compress:cdn",
    "compress:cdn": "uglifyjs --config-file ./config/compress.json -o dist/shapely.min.js dist/shapely.js",
    "clean": "node_modules/.bin/del-cli -f dist lib lib.es2015",
    "postversion": "git push --follow-tags && npm publish",
    "preversion": "npm run rebuild",
    "rebuild": "npm run clean && npm run build",
    "test": "node_modules/.bin/mocha --require ts-node/register --reporter spec ./tests/**/**.ts"
  },
  "version": "0.2.0"
}
